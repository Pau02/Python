import os
os.system("clear")
valor=input("Escriba el año, yo deduciré si es bisiesto o no")

if(valor==0):
    print "No hubo el año 0"
elif(valor<0):
    if(valor%4==0 and valor%100!=0) or valor%400==0:
        print -valor,"antes de Cristo No es año bisiesto"
    else:
        print -valor,"antes de Cristo No es año bisiesto"
else:
    if(valor%4==0 and valor%100!=0) or valor%400==0:
        print valor,"Si es año bisiesto"
    else:
        print valor,"No es año bisiesto"
